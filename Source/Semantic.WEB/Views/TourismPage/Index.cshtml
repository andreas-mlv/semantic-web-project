@model List<Semantic.WEB.Model.CityDTO>
@{
    int page = Convert.ToInt32(ViewData["Page"] ?? 0);
    int perPage = 9;
    int total = Model.Count;
    int skip = page * perPage;
    var cities = Model.Skip(skip).Take(perPage).ToList();
    int totalPages = (int)Math.Ceiling(total / (double)perPage);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ukrainian Tourism Ranking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            padding: 30px;
        }
        .card {
            border-radius: 1rem;
            overflow: hidden;
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: scale(1.03);
        }
        .card img {
            object-fit: cover;
            height: 200px;
            width: 100%;
            background-color: #d3d3d3;
        }
        .city-name {
            font-weight: 700;
            font-size: 1.2rem;
        }
        .info-line {
            font-size: 0.95rem;
            color: #555;
        }
        .pagination-container {
            text-align: center;
            margin-top: 20px;
        }
        .page-link-custom {
            display: inline-block;
            padding: 8px 14px;
            border: 1px solid #ccc;
            margin: 0 4px;
            border-radius: 8px;
            background-color: white;
            text-decoration: none;
            color: black;
        }
        .page-link-custom.active {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="mb-4 text-center">🇺🇦 Tourism Ranking of Ukrainian Cities</h1>

        <div class="row g-4">
            @foreach (var city in cities)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        @if (!string.IsNullOrEmpty(city.LogoUrl))
                        {
                            <img src="@city.LogoUrl" alt="@city.CityLabel logo" />
                        }
                        else
                        {
                            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///ywAAAAAAQABAAACAUwAOw==" style="background-color: #b0b0b0;" />
                        }

                        <div class="card-body text-center">
                            <div class="city-name">
                                🏙️ @city.CityLabel | @city.CityEngName
                            </div>
                            <div class="info-line">
                                👥 Total Visitors: <strong>@city.TotalVisitors.ToString("N0")</strong>
                            </div>
                            <div class="info-line">
                                📍 @city.Coordinates
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="pagination-container mt-4">
            @{
                var prevPage = page > 0 ? page - 1 : 0;
                var nextPage = page < totalPages - 1 ? page + 1 : totalPages - 1;
            }

            <a class="page-link-custom @(page == 0 ? "disabled" : "")" href="/city/@prevPage">&lt;</a>

            @for (int i = Math.Max(0, page - 1); i <= Math.Min(totalPages - 1, page + 1); i++)
            {
                <a class="page-link-custom @(i == page ? "active" : "")" href="/city/@i">@i</a>
            }

            <a class="page-link-custom @(page == totalPages - 1 ? "disabled" : "")" href="/city/@nextPage">&gt;</a>
        </div>
    </div>
</body>
</html>
